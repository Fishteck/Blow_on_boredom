<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="android.example.blowonboredom.fragments.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/favoriteActivitiesFragment"
        android:name="android.example.blowonboredom.fragments.FavoriteActivitiesFragment"
        android:label="fragment_favorite_activities"
        tools:layout="@layout/fragment_favorite_activities" >

        <action
            android:id="@+id/action_favoriteActivitiesFragment_to_detailActivityFragment"
            app:destination="@id/detailActivityFragment"
            app:enterAnim="@anim/slide_left"
            app:exitAnim="@anim/wait_anim"
            app:popEnterAnim="@anim/wait_anim"
            app:popExitAnim="@anim/slide_right"/>
    </fragment>
    <fragment
        android:id="@+id/randomActivitiesFragment"
        android:name="android.example.blowonboredom.fragments.RandomActivitiesFragment"
        android:label="fragment_random_activities"
        tools:layout="@layout/fragment_random_activities" >

        <action
            android:id="@+id/action_randomActivitiesFragment_to_detailActivityFragment"
            app:destination="@id/detailActivityFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailActivityFragment"
        android:name="android.example.blowonboredom.fragments.DetailActivityFragment"
        android:label="fragment_detail_activity"
        tools:layout="@layout/fragment_detail_activity" >
        <action
            android:id="@+id/action_detailActivityFragment_to_randomActivitiesFragment"
            app:destination="@id/randomActivitiesFragment" />
        <action
            android:id="@+id/action_detailActivityFragment_to_favoriteActivitiesFragment"
            app:destination="@id/favoriteActivitiesFragment"
           />
    </fragment>
</navigation>