<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="delimiter">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/delimiter_height_2</item>
        <item name="android:background">@color/background_lite_orange</item>
        <item name="android:paddingStart">@dimen/padding_N_margin_15</item>
        <item name="android:paddingEnd">@dimen/padding_N_margin_15</item>
    </style>

    <style name="random_activity_item_activity_text_appearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="random_activity_item_name_appearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:textColor">@color/background_lite_orange</item>
    </style>

    <style name="card_home">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>